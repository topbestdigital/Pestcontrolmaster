<div class="uk-card uk-card-default uk-grid-collapse uk-child-width-1-3@s uk-margin" data-uk-grid>
    <div class="uk-card-media-left uk-cover-container">
        <img src="[[+tv.article_image:phpthumbon=`w=600&h=400&zc=C&f=jpeg&q=75`]]" alt='[[+pagetitle]]' data-uk-cover>
        <canvas width="600" height="400"></canvas>
    </div>
    <div>
        <div class="uk-card-body">
            <h3 class="uk-card-title">[[+longtitle]]</h3>
            <p>[[+description]]</p>
        </div>
    </div>
    <div>
        <div class="uk-card-body">
            <p>[[+introtext]]</p>
            <a href="[[~[[+id]]]]" class="uk-button uk-button-default">Детальніше</a>
        </div>
    </div>
</div>
